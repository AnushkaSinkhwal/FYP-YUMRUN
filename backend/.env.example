# Server Configuration
PORT=7000
NODE_ENV=development

# MongoDB Connection
CONNECTION_STRING=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/yumrun?retryWrites=true&w=majority

# Cloudinary Configuration (for image uploads)
CLOUD_NAME=your_cloud_name
CLOUD_API_KEY=your_api_key
CLOUD_API_SECRET=your_api_secret

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=7d

# Edamam API (for nutritional analysis)
EDAMAM_APP_ID=your_edamam_app_id
EDAMAM_APP_KEY=your_edamam_app_key

# Cross Origin Resource Sharing
FRONTEND_URL=http://localhost:3000

# API Configuration
API_URL=http://localhost:7000/api 

# Website URL (for email links)
FRONTEND_URL=http://localhost:3000

# Email Configuration (Gmail SMTP)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=YumRun <your_email@gmail.com>
ADMIN_EMAIL=admin@example.com # Email address for receiving contact form submissions

# Khalti Payment Gateway Configuration
KHALTI_SECRET_KEY=your_khalti_secret_key
FRONTEND_URL=http://localhost:3000 # For Khalti return URLs 